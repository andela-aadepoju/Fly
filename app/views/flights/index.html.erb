<div class="pages">
  <div class="panel panel-primary all_flight">
    <div class="panel-heading">
      <h3 class="panel-title">All Flights</h3>
    </div>
    <%= render "flights/search" %>

    <div class="panel-body" align ="center">  
      <% @flight = Flight.all.paginate(:page => params[:page], :per_page => 10) %>
      <% @flight.each do |flight| %>
        <li class="list-group-item" >
          <div class="flight_table">
            <div class="row">
                <div class="col-md-2 text-center vertical-align search_airline">
                  <div class="">
                    <div class="radio-danger">
                      <%= radio_button_tag(:flight_id, flight.id) %>
                    </div>
                  <%= label_tag "flight_id_#{flight.id}", flight.airline %>
                  </div>
                </div>
          <div class="">
                <div class="col-md-3">
                  <div class="">
                    <i class="fa fa-plane"></i>
                    <h5><%= flight.departure_date.strftime("%-l:%M%P") %></h5>
                    <p class=""><%=flight.departure_date.strftime("%d - %m - %Y")%></p>
                    <%= flight.origin.name %></p>
                  </div>
                </div>
                <div class="col-md-3">
                  <i class="fa fa-plane fa-flip-vertical"></i>
                  <h5><%= flight.arrival_date.strftime("%-l:%M%P") %></h5>
                  <p class=""><%= flight.arrival_date.strftime("%d - %m - %Y")%></p>
                  <%= flight.destination.name %></p>
                </div>
              </div>
              <div class="col-md-3 search_price">
                <span class=""><%= number_to_currency flight.price, delimiter: '.' %></span>
                <span>/person</span><p>
                 <p><%= link_to 'Select', 'booking_new', class: "btn btn-primary", id: "btn_#{flight.id}" %></p>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </div>
      <div align = "center">
        <%= will_paginate @flight, renderer: BootstrapPagination::Rails  %>
      </div>
  </div>
</div>